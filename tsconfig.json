{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "lib": ["es2015", "dom"]
  }
}
